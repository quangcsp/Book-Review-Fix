  <div class="container">

    <div class="navbar-header">
      <%= link_to "Book Review", root_path, class: "navbar-brand" %>
    </div>

    <ul class="nav navbar-nav">

      <% if user_signed_in? == false %>
          <li><%= link_to "Log In", new_user_session_path %></li>
